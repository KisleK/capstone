<h1>Update Profile</h1>

<%= form_tag "/owners/#{@owner.id}", method: :patch do %>
  
  <div class="form-group">
    <%= label_tag :first_name %>
    <%= text_field_tag :first_name, @owner.first_name, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag :last_name %>
    <%= text_field_tag :last_name, @owner.last_name, :class => "form-control" %>
  </div>

   <div class="form-group">
    <%= label_tag :email %>
    <%= email_field_tag :email, @owner.email, :class => "form-control" %>
  </div> 

   <div class="form-group">
    <%= label_tag :address %>
    <%= text_field_tag :address, @owner.address, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag :phone_number %>
    <%= phone_field_tag :phone_number, @owner.phone_number, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag :password, "Password:" %>
    <%= password_field_tag :password, @owner.password, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag :password_confirmation, "Re-Enter Password" %>
    <%= password_field_tag :password_confirmation, nil, :class => "form-control" %>
  </div>
  
  <div class="form-group">
    <%= submit_tag "Update Account", :class => "btn btn-sm btn-success"%>
  </div>
<% end %>