

<h1>Become a Walker</h1>

<%= form_tag '/walkers', method: :post do %>



<div class="form-group">
    <%= text_field_tag :first_name, nil, placeholder: 'First Name', :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= text_field_tag :first_name, nil, placeholder: 'Last Name', :class => "form-control" %>
  </div>
  <br>
  <div class="form-group"> 
    <%= email_field_tag :email, nil, placeholder: 'E-mail Address', :class => "form-control" %>
  </div>
  <br>
   

  <div class="form-group">
   
    <%= phone_field_tag :phone_number, nil, placeholder: 'Phone Number', :class => "form-control" %>
  </div> 


  <div class="form-group">
    <%= text_field_tag :address, nil, placeholder: 'Address', :class => "form-control" %>
  </div>

   <div class="form-group">
    <%= text_field_tag :city, nil, placeholder: 'City', :class => "form-control" %>
    <%= text_field_tag :state, nil, placeholder: 'State', :class => "form-control" %>
    <%= text_field_tag :zip, nil, placeholder: 'Zip Code', :class => "form-control" %>
  </div>
   
  <br>
  <div class="form-group"> 
    <%= password_field_tag :password, nil, placeholder: 'Password' %>
  </div>

  <div class="form-group"> 
    <%= password_field_tag :password_confirmation, nil, placeholder: 'Confirm Password' %>
  </div>
  <br>
  
  <%= submit_tag "Create Account" %>

<% end %>