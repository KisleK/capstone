

<h1>Become a Walker</h1>

<%= form_tag '/walkers', method: :post do %>



<div>
    <%= text_field_tag :first_name, nil, placeholder: 'First Name' %>
  </div>

  <div>
    <%= text_field_tag :first_name, nil, placeholder: 'Last Name' %>
  </div>
  <br>
  <div> 
    <%= email_field_tag :email, nil, placeholder: 'E-mail Address' %>
  </div>
  <br>
   

  <div>
   
    <%= phone_field_tag :phone_number, nil, placeholder: 'Phone Number' %>
  </div> 


  <div>
    <%= text_field_tag :address, nil, placeholder: 'Address' %>
  </div>

   <div>
    <%= text_field_tag :city, nil, placeholder: 'City' %>
    <%= text_field_tag :state, nil, placeholder: 'State' %>
    <%= text_field_tag :zip, nil, placeholder: 'Zip Code' %>
  </div>
   
  <br>
  <div> 
    <%= password_field_tag :password, nil, placeholder: 'Password' %>
  </div>

  <div> 
    <%= password_field_tag :password_confirmation, nil, placeholder: 'Confirm Password' %>
  </div>
  <br>
  
  <%= submit_tag "Create Account" %>

<% end %>