<h1>Update Puppy</h1>

<% if @dog.image_file_name %>
   <%= image_tag @dog.image.url(:thumbnail) %>
<% end %>
<br>
<br>

<%= form_tag "/dogs/#{@dog.id}", method: :patch do %>

   <div class="form-group">
      <%= text_field_tag :name, @dog.name %>
  </div>

  <div class="form-group">
      <%= text_field_tag :breed, @dog.breed %>
  </div>

  <div class="form-group">
      <%= text_field_tag :gender, @dog.gender %>
  </div>

  <div class="form-group">
    <%= text_field_tag :age, @dog.age %> years old.
  </div>
  <div class="form-group">
      <%= text_field_tag :weight, @dog.weight %>  pounds.
  </div>
  <br>
   <div class="form-group">
      How long should you walk this dog?
  </div>
   <div class="form-group">
      <%= text_field_tag :distance, @dog.distance %>  minutes.
  </div>
  <br>
  <div class="form-group">
  
    <%= text_field_tag :bio, @dog.bio %>
  </div>
  <br>
  <div class="form-group">
  <% if current_owner %>   
    <%= submit_tag "Update Puppy", :class => "btn btn-sm btn-success"%>
    <%= link_to "Remove", "/dogs/#{ @dog.id}", :class => "btn btn-sm btn-danger", method: :delete %>
  <% end %>
  </div>
<% end %>

