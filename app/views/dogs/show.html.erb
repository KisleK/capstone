<div class="container">
  <div class="row">
  <div class="col-md-4">
    <% @dog = Dog.find(params[:id]) %>
   

    <% if @dog.image_file_name %>
      <%= image_tag @dog.image.url(:medium) %>
    <% end %>

      <% if current_owner %>

        <%= form_for @dog, url: dog_image_path, html: {multipart: true} do |f| %>
            <%= f.file_field :image %>
            <%= submit_tag "Update" %>
         <% end %>
      <% end %>
    </div>
      
 <div class="col-md-4">
  <h2>About me</h2>
    <li><%= @dog.bio %></li>
   
 </div>

  
    <div class="col-md-4">
      <h1><a href="/dogs/<%= @dog.id %>/edit"><%= @dog.name%></a></h1>
      <ul>
        
        <li><h3><%= @dog.breed %></h3></li>
        <li><h4><%= @dog.gender %></h4></li>
        <li><h5><%= @dog.age %> years old.</h5></li>
        <li><h5><%= @dog.weight %> pounds.</h5></li>
        <br>
        <li><h5>How long should you walk this dog?</h5> </li>

        <h5><%= @dog.distance %> minutes.</h5></li>
        
      </ul>
     <% if current_owner %>
      <a href="/dogs/<%= @dog.id %>/walks/new">Request a walk.</a>
     <% end %>
    </div>
  </div>
 
</div>


